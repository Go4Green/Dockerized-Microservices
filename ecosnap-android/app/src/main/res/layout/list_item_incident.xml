<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_eco_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36"
        android:textAppearance="@style/TextAppearance.Moneyment.Subtitle2"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/img_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_status" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="10-12-2019"
        android:textAppearance="@style/TextAppearance.Moneyment.Body2"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/img_status"
        app:layout_constraintTop_toTopOf="@+id/img_status" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="11:19"
        android:textAppearance="@style/TextAppearance.Moneyment.Subtitle2"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/img_status"
        app:layout_constraintStart_toStartOf="@+id/txt_date"
        app:layout_constraintTop_toBottomOf="@+id/txt_date" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Moneyment.Body2"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/img_status"
        app:layout_constraintEnd_toStartOf="@+id/txt_eco_points"
        app:layout_constraintStart_toEndOf="@+id/txt_date"
        app:layout_constraintTop_toTopOf="@+id/img_status"
        tools:text="Stratigou Papoulia 64 asdfas dfasdfasdfasdf" />

    <ImageView
        android:id="@+id/img_status"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/progress_check" />
</androidx.constraintlayout.widget.ConstraintLayout>